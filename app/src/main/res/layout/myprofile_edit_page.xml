<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity"
    android:id="@+id/layout"
    android:background="@drawable/main_theme_color">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent="0.8">

        <LinearLayout
            android:id="@+id/editTextLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/setProfileBtn"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginVertical="30dp"
                android:background="@drawable/circle_white"
                android:gravity="center"
                android:text="\n\n\n\n\n\n프로필 사진"
                android:textColor="@color/silver"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginVertical="30dp"
                android:background="@drawable/circle_white" />

            <ImageView
                android:id="@+id/profileImage2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/badgeLayout"
                app:layout_constraintWidth_percent="0.5"
                android:layout_marginVertical="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/badge1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintWidth_percent="0.2"
                        android:src="@drawable/circle_gray"
                        android:scaleType="fitXY"
                        android:padding="10dp"
                        android:adjustViewBounds="true"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <ImageView
                        android:id="@+id/badge2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintWidth_percent="0.2"
                        android:src="@drawable/circle_gray"
                        android:scaleType="fitXY"
                        android:padding="10dp"
                        android:adjustViewBounds="true"
                        app:layout_constraintStart_toEndOf="@id/badge1"
                        app:layout_constraintEnd_toStartOf="@id/badge3"/>
                    <ImageView
                        android:id="@+id/badge3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintWidth_percent="0.2"
                        android:src="@drawable/circle_gray"
                        android:scaleType="fitXY"
                        android:padding="10dp"
                        android:adjustViewBounds="true"
                        app:layout_constraintStart_toEndOf="@id/badge2"
                        app:layout_constraintEnd_toStartOf="@id/badge4"
                        />
                    <ImageView
                        android:id="@+id/badge4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintWidth_percent="0.2"
                        android:src="@drawable/circle_gray"
                        android:scaleType="fitXY"
                        android:padding="10dp"
                        android:adjustViewBounds="true"
                        app:layout_constraintStart_toEndOf="@id/badge3"
                        app:layout_constraintEnd_toStartOf="@id/badge5"/>
                    <ImageView
                        android:id="@+id/badge5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintWidth_percent="0.2"
                        android:src="@drawable/circle_gray"
                        android:scaleType="fitXY"
                        android:padding="10dp"
                        android:adjustViewBounds="true"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">
                    <ImageView
                        android:id="@+id/badge6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintWidth_percent="0.2"
                        android:src="@drawable/circle_gray"
                        android:scaleType="fitXY"
                        android:padding="10dp"
                        android:adjustViewBounds="true"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <ImageView
                        android:id="@+id/badge7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintWidth_percent="0.2"
                        android:src="@drawable/circle_gray"
                        android:scaleType="fitXY"
                        android:padding="10dp"
                        android:adjustViewBounds="true"
                        app:layout_constraintStart_toEndOf="@id/badge6"
                        app:layout_constraintEnd_toStartOf="@id/badge8"/>
                    <ImageView
                        android:id="@+id/badge8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintWidth_percent="0.2"
                        android:src="@drawable/circle_gray"
                        android:scaleType="fitXY"
                        android:padding="10dp"
                        android:adjustViewBounds="true"
                        app:layout_constraintStart_toEndOf="@id/badge7"
                        app:layout_constraintEnd_toStartOf="@id/badge9"
                        />
                    <ImageView
                        android:id="@+id/badge9"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintWidth_percent="0.2"
                        android:src="@drawable/circle_gray"
                        android:scaleType="fitXY"
                        android:padding="10dp"
                        android:adjustViewBounds="true"
                        app:layout_constraintStart_toEndOf="@id/badge8"
                        app:layout_constraintEnd_toStartOf="@id/badge10"/>
                    <ImageView
                        android:id="@+id/badge10"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintWidth_percent="0.2"
                        android:src="@drawable/circle_gray"
                        android:scaleType="fitXY"
                        android:padding="10dp"
                        android:adjustViewBounds="true"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>




            <EditText
                android:id="@+id/introduceEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_white"
                android:hint="자기소개수정"
                android:maxLength="250"
                android:maxLines="5"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                android:textColorHint="@color/silver"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:background="@drawable/rounded_white"
                        android:hint="운동장르"
                        android:paddingHorizontal="20dp"
                        android:textColorHint="@color/gray"
                        android:paddingVertical="15dp"
                        android:textSize="20dp" />

                    <ImageButton
                        android:id="@+id/fitnessListBtn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_gray"
                        android:padding="20dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/reverse_triangle"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/checkboxLinear1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/exerCheck1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/rounded_white"
                        android:buttonTint="@color/silver"
                        android:text="파워리프팅"
                        android:textColor="@color/silver"
                        android:textSize="20dp" />

                    <CheckBox
                        android:id="@+id/exerCheck2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/rounded_white"
                        android:buttonTint="@color/silver"
                        android:text="보디빌딩"
                        android:textColor="@color/silver"
                        android:textSize="20dp" />

                    <CheckBox
                        android:id="@+id/exerCheck3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/rounded_white"
                        android:buttonTint="@color/silver"
                        android:text="크로스핏"
                        android:textColor="@color/silver"
                        android:textSize="20dp" />

                    <CheckBox
                        android:id="@+id/exerCheck4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/rounded_white"
                        android:buttonTint="@color/silver"
                        android:text="기타"
                        android:textColor="@color/silver"
                        android:textSize="20dp" />


                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:background="@drawable/rounded_white"
                        android:hint="운동시간"
                        android:paddingHorizontal="20dp"
                        android:textColorHint="@color/gray"
                        android:paddingVertical="15dp"
                        android:textSize="20dp" />

                    <ImageButton
                        android:id="@+id/timeListBtn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_gray"
                        android:padding="20dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/reverse_triangle"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/checkboxLinear2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/timeCheck1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/rounded_white"
                       android:buttonTint="@color/silver"
                        android:text="오전"
                        android:textColor="@color/silver"
                        android:textSize="20dp" />

                    <CheckBox
                        android:id="@+id/timeCheck2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/rounded_white"
                        android:buttonTint="@color/silver"
                        android:text="오후"
                        android:textColor="@color/silver"
                        android:textSize="20dp" />

                    <CheckBox
                        android:id="@+id/timeCheck3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/rounded_white"
                        android:buttonTint="@color/silver"
                        android:text="밤"
                        android:textColor="@color/silver"
                        android:textSize="20dp" />

                    <CheckBox
                        android:id="@+id/timeCheck4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/rounded_white"
                        android:buttonTint="@color/silver"
                        android:text="새벽"
                        android:textColor="@color/silver"
                        android:textSize="20dp" />


                </LinearLayout>


            </LinearLayout>


            <EditText
                android:id="@+id/careerEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_white"
                android:hint="운동구력"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                android:textColorHint="@color/silver"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/abilityEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_white"
                android:hint="수행능력"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                android:textColorHint="@color/silver"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/addressText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_silver"
                    android:textColor="@color/white"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="5dp"
                    android:text="\n\n"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/addressChangeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_gray"
                    android:gravity="center"
                    android:paddingHorizontal="20dp"
                    android:text="변경하기"
                    android:textSize="20dp" />
            </LinearLayout>


            <Button
                android:id="@+id/saveBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:paddingVertical="20dp"
                android:text="저장하기"
                android:background="@drawable/rounded_signature_purple2"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>